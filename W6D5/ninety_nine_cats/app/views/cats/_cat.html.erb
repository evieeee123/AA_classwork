<% if action == :show %>
    <a href="<%= cats_url %>">Cat Index</a>
<% else %>
    <a href="<%= cat_url(cat) %>">Single cat</a>
<% end %>


<table>
    <thead>
        <tr>
            <th colspan="2"><%= cat.name %></th>
        </tr>
    </thead>
    <tr>
        <td>Color:</td>
        <td><%= cat.color %></td>
    </tr>

    <tr>
        <td>Sex:</td>
        <td><%= cat.sex %></td>
    </tr>

    <tr>
        <td>Age:</td>
        <td><%= cat.age %></td>
    </tr>

    <tr>
        <td>Description:</td>
        <td><%= cat.description %></td>
    </tr>
</table>